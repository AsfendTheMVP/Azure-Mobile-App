<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.Views.UpdateNotePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="TbUpdateNote" Text="Update" Clicked="TbUpdateNote_OnClicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="EntTitle" Placeholder="Title"/>
            <Editor x:Name="EdtDescription" Placeholder="Description" AutoSize="TextChanges"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>